#!/bin/sh

lcd_state=/tmp/sway/lcd

if [ ! -f $lcd_state ]
then
	dirname $lcd_state | xargs mkdir -p
	swaymsg -t get_outputs | grep "\"active\": false" > /dev/null && echo 0 > $lcd_state
fi

read lcd < $lcd_state

if [ "$lcd" == "0" ]
then
	swaymsg "output $1 enable"
	echo 1 > $lcd_state
else
	swaymsg "output $1 disable"
	echo 0 > $lcd_state
fi
